{
  "base_url": "https://api-staging.example.com",
  "timeout": 30000,
  "retry_attempts": 2,
  "retry_delay": 1000,
  "auth": {
    "type": "oauth2",
    "client_id": "${STAGING_CLIENT_ID}",
    "client_secret": "${STAGING_CLIENT_SECRET}",
    "auth_url": "https://auth-staging.example.com/oauth/token"
  },
  "logging": {
    "level": "warning",
    "file": {
      "enabled": true,
      "path": "logs/api_tests_staging.log",
      "max_size": "10MB",
      "backup_count": 5
    },
    "console": {
      "enabled": true,
      "colored": true
    }
  },
  "mocks": {
    "enabled": false,
    "wiremock": {
      "port": 8080,
      "root_dir": "mocks/wiremock_configs"
    },
    "mockserver": {
      "port": 1080,
      "root_dir": "mocks/mockserver_configs"
    }
  },
  "test_data": {
    "seed": 54321,
    "user_count": 5,
    "product_count": 10,
    "order_count": 3
  },
  "feature_flags": {
    "new_user_flow": true,
    "enhanced_security": true,
    "beta_features": true
  }
}
